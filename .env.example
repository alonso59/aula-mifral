# OpenWebUI Configuration

# Ollama URL for the backend to connect
OLLAMA_BASE_URL='http://localhost:11434'

# OpenAI API Configuration (optional)
OPENAI_API_BASE_URL=''
OPENAI_API_KEY=''

# CORS Configuration
CORS_ALLOW_ORIGIN='*'
FORWARDED_ALLOW_IPS='*'

# Database Configuration
DATABASE_URL='sqlite:///./data/webui.db'
# For PostgreSQL: DATABASE_URL='postgresql://user:password@localhost:5432/openwebui'
# For MySQL: DATABASE_URL='mysql://user:password@localhost:3306/openwebui'

# Authentication & Security
WEBUI_SECRET_KEY=''
JWT_EXPIRES_IN='-1'
ENABLE_SIGNUP='true'
ENABLE_LOGIN_FORM='true'
DEFAULT_USER_ROLE='pending'

# Admin Configuration
ADMIN_EMAIL=''
SHOW_ADMIN_DETAILS='true'
PENDING_USER_OVERLAY_TITLE=''
PENDING_USER_OVERLAY_CONTENT=''

# Debug Flags
DEBUG='false'
SRC_LOG_LEVELS='{"MODELS": "INFO", "MAIN": "INFO", "DB": "INFO"}'

# Analytics (disable)
SCARF_NO_ANALYTICS='true'
DO_NOT_TRACK='true'
ANONYMIZED_TELEMETRY='false'

# Course System Configuration
ENABLE_COURSES='true'
